include arrows.pug
include popups.pug
include mixins.pug
    
//- code
doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="developer" content="Evgenia Polozova")
    title Яндекс Дом
    link(rel="stylesheet" href="styles/main.css" type="text/css")
    link(rel="stylesheet" href="styles/popups.css" type="text/css")
  body
    header.header
      .container.container--centered
        a.header__logo(href="#" title="Яндекс Дом")
          img(src="assets/logo@1x.png" srcset="assets/logo@1x.png, assets/logo@2x.png 2x" alt="Яндекс Дом")
        nav.main-nav
          +link_main("Сводка")
          +link_main("Устройства")
          +link_main("Сценарии")
    section.main
      .container.container--grid
        article.main__part.main__part--small.details
          h2.main__heading
            | Главное
          .details__container
            .details__main
              .details__header
                h1.details__greeting
                  | Привет, Геннадий!
                p.details__info Двери и окна закрыты, сигнализация включена.
              .weather__container
                .weather
                  span.info
                    | Дома:
                  p.weather__temp
                    | +23
                .weather
                  span.info
                    | За окном:
                  p.weather__temp
                    | +19&nbsp;
                    img.weather__icon(src="assets/cloud-drizzle.svg")
            .details__scripts
              .details-scripts__container
                +item_big("Philips Cooler", "Начнет охлаждать в 16:30", "light")
                +item_big("Xiaomi Yeelight LED Smart Bulb", "Включится в 17:00", "temp")
                +item_big("Philips Cooler", "Начнет охлаждать в 16:30", "light")
                +item_big("Xiaomi Yeelight LED Smart Bulb", "Включится в 17:00", "temp")
              .details-scripts__action
                +arrow_doubleup()
        article.main__part.main__part--small.scripts
          h2.main__heading
            | Избранные сценарии
            .actions
              +arrow_left()
              +arrow_right()
          .no-overflow
            .scripts__container
              +item("Выключить весь свет в доме и во дворе", "", "light", "active")
              +item("Я ухожу", "", "scheduled")
              +item("Включить свет в коридоре", "", "light", "active")
              +item("Набрать горячую ванну", "Начнется в 18:00", "temp", "active")
              +item("Сделать пол тёплым во всей квартире", "", "temp")
        article.main__part.main__part--big.devices
          h2.main__heading
            | Избранные девайсы
            nav.subnav
              .subnav__container
                +pill("Все")(class="subnav__pill--active")
                +pill("Кухня")
                +pill("Зал")
                +pill("Лампочки")
                +pill("Камеры")
            .actions
              +arrow_left()
              +arrow_right()(class="action--available")
          .no-overflow
            .devices__container
              +item_big("Xiaomi Yeelight LED Smart Bulb", "Включено", "light", "active")
              +item_big("D-Link Omna 180 Cam", "Включится в 17:00", "light")
              +item_big("Elgato Eve Degree Connected", "Выключено до 17:00", "temp")
              +item_big("LIFX Mini Day & Dusk A60 E27", "Включится в 17:00", "light")
              +item_big("Xiaomi Mi Air Purifier 2S", "Включено", "light", "active")
              +item_big("Philips Zhirui", "Выключено", "light")
              +item_big("Xiaomi Mi Air Purifier 2S", "Включено", "light", "active")
              +item_big("Philips Zhirui", "Выключено", "light")
    footer.footer
      .container.container--centered
        +link_footer("Помощь")
        +link_footer("Обратная связь")
        +link_footer("Разработчикам")
        +link_footer("Условия использования")
        span.footer__copyright
          | © 2001–2017   ООО «Яндекс»
    script(src="main.js")
